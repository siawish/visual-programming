<Window x:Class="NADRAApp.Windows.FaceRecognitionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NADRA Face Recognition System" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="TextBlock" x:Key="HeaderStyle">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Foreground" Value="#2E3440"/>
        </Style>
        
        <Style TargetType="Border" x:Key="PanelStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#1B4332" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Image Source="/Images/nadra-logo.png" Width="40" Height="40" Margin="0,0,15,0" 
                       RenderOptions.BitmapScalingMode="HighQuality"/>
                <TextBlock Text="NADRA Face Recognition System" 
                          FontSize="24" FontWeight="Bold" 
                          Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - Query Image -->
            <Border Grid.Column="0" Style="{StaticResource PanelStyle}">
                <StackPanel>
                    <TextBlock Text="Upload Photo for Recognition" Style="{StaticResource HeaderStyle}"/>
                    
                    <Border BorderBrush="#CCCCCC" BorderThickness="2" Height="300" 
                           Background="#FAFAFA" CornerRadius="5">
                        <Image x:Name="QueryImage" Stretch="Uniform" Margin="5"/>
                    </Border>
                    
                    <Button x:Name="LoadImageButton" Content="ðŸ“· Load Photo" 
                           Background="#40916C" Foreground="White" 
                           Click="LoadImageButton_Click" Margin="0,10,0,0"/>
                    
                    <Button x:Name="SearchButton" Content="ðŸ” Search Database" 
                           Background="#2D6A4F" Foreground="White" 
                           Click="SearchButton_Click" IsEnabled="False" Margin="0,5,0,0"/>
                    
                    <TextBlock x:Name="StatusText" Text="Load a photo to begin face recognition" 
                              FontSize="12" Foreground="#666" Margin="0,10,0,0" 
                              TextWrapping="Wrap" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- Center Panel - Match Results -->
            <Border Grid.Column="1" Style="{StaticResource PanelStyle}">
                <StackPanel>
                    <TextBlock Text="Recognition Results" Style="{StaticResource HeaderStyle}"/>
                    
                    <ScrollViewer Height="450" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="ResultsPanel">
                            <TextBlock Text="No search performed yet" 
                                      FontStyle="Italic" Foreground="#999" 
                                      HorizontalAlignment="Center" Margin="0,50,0,0"/>
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>
            </Border>
            
            <!-- Right Panel - Citizen Details -->
            <Border Grid.Column="2" Style="{StaticResource PanelStyle}">
                <StackPanel>
                    <TextBlock Text="Citizen Information" Style="{StaticResource HeaderStyle}"/>
                    
                    <ScrollViewer Height="450" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="CitizenDetailsPanel">
                            <TextBlock Text="Select a match to view citizen details" 
                                      FontStyle="Italic" Foreground="#999" 
                                      HorizontalAlignment="Center" Margin="0,50,0,0"/>
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Bottom Panel - Controls -->
        <Border Grid.Row="2" Background="#E9ECEF" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock x:Name="DatabaseStatusText" 
                          Text="Database: Loading citizen records..." 
                          VerticalAlignment="Center" Margin="0,0,20,0" 
                          FontSize="12" Foreground="#666"/>
                
                <Button x:Name="RefreshDatabaseButton" Content="ðŸ”„ Refresh Database" 
                       Background="#6C757D" Foreground="White" 
                       Click="RefreshDatabaseButton_Click"/>
                
                <Button x:Name="ClearButton" Content="ðŸ—‘ï¸ Clear Results" 
                       Background="#DC3545" Foreground="White" 
                       Click="ClearButton_Click"/>
                
                <Button x:Name="CloseButton" Content="âŒ Close" 
                       Background="#6C757D" Foreground="White" 
                       Click="CloseButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>