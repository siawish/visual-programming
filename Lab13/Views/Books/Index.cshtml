@model IEnumerable<BooksMVC.Models.Book>

@{
    ViewData["Title"] = "Books Library";
}

<div class="row mb-4">
    <div class="col-md-12">
        <h1 class="display-4">
            <i class="bi bi-book-half"></i> Books Library
        </h1>
        <p class="lead">Manage your book collection</p>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row mb-4">
    <div class="col-md-8">
        <form asp-action="Index" method="get" class="d-flex">
            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" 
                   class="form-control me-2" placeholder="Search by title or author..." />
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-search"></i> Search
            </button>
            @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
            {
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="bi bi-x-circle"></i> Clear
                </a>
            }
        </form>
    </div>
    <div class="col-md-4 text-end">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Book
        </a>
    </div>
</div>

@if (Model.Any())
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm hover-card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-book"></i> @item.Title
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <strong><i class="bi bi-person"></i> Author:</strong> @item.Author
                        </p>
                        <p class="card-text">
                            <strong><i class="bi bi-cash"></i> Price:</strong> Rs @item.Price.ToString("F2")
                        </p>
                        <p class="card-text">
                            <strong><i class="bi bi-calendar-event"></i> Published:</strong> @item.PublishedDate.ToShortDateString()
                        </p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="btn-group w-100" role="group">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                <i class="bi bi-eye"></i> View
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal@(item.Id)">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Delete Confirmation Modal -->
            <div class="modal fade" id="deleteModal@(item.Id)" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Confirm Delete</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to delete "<strong>@item.Title</strong>"?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info text-center" role="alert">
        <i class="bi bi-info-circle fs-1"></i>
        <h4 class="mt-3">No books found</h4>
        <p>@(string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()) ? "Start by adding your first book!" : "Try a different search term.")</p>
        @if (string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
        {
            <a asp-action="Create" class="btn btn-primary mt-2">
                <i class="bi bi-plus-circle"></i> Add Your First Book
            </a>
        }
    </div>
}
