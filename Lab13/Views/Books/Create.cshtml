@model BooksMVC.Models.Book

@{
    ViewData["Title"] = "Add New Book";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h2 class="mb-0">
                    <i class="bi bi-plus-circle"></i> Add New Book
                </h2>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label">
                            <i class="bi bi-book"></i> Title
                        </label>
                        <input asp-for="Title" class="form-control" placeholder="Enter book title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Author" class="form-label">
                            <i class="bi bi-person"></i> Author
                        </label>
                        <input asp-for="Author" class="form-control" placeholder="Enter author name" />
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Price" class="form-label">
                            <i class="bi bi-cash"></i> Price
                        </label>
                        <div class="input-group">
                            <span class="input-group-text">Rs</span>
                            <input asp-for="Price" class="form-control" placeholder="0.00" step="0.01" />
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PublishedDate" class="form-label">
                            <i class="bi bi-calendar-event"></i> Published Date
                        </label>
                        <input asp-for="PublishedDate" class="form-control" type="date" />
                        <span asp-validation-for="PublishedDate" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> Add Book
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
