<Window x:Class="NADRAApp.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NADRA Login System" Height="700" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
        
        <Style TargetType="PasswordBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
        
        <Style TargetType="Button" x:Key="LoginButton">
            <Setter Property="Background" Value="#1B4332"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                               CornerRadius="8"
                               Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Opacity="0.2" ShadowDepth="3" BlurRadius="5"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2D6A4F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0F2A1A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2E3440"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#1B4332" Padding="20">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="ðŸ›ï¸" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="NADRA" FontSize="28" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="National Database &amp; Registration Authority" 
                          FontSize="12" Foreground="#B8E6B8" 
                          HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Login Form -->
        <Border Grid.Row="1" Background="White" Margin="40" 
               CornerRadius="10" Padding="40">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="3" Opacity="0.3"/>
            </Border.Effect>
            
            <StackPanel>
                <TextBlock Text="System Login" FontSize="24" FontWeight="Bold" 
                          HorizontalAlignment="Center" Margin="0,0,0,30" 
                          Foreground="#1B4332"/>
                
                <!-- Username Field -->
                <TextBlock Text="ðŸ‘¤ Username" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="UsernameTextBox" 
                        Text="admin"
                        ToolTip="Enter your username"/>
                
                <!-- Password Field -->
                <TextBlock Text="ðŸ”’ Password" Style="{StaticResource LabelStyle}"/>
                <PasswordBox x:Name="PasswordBox" 
                            ToolTip="Enter your password"
                            Padding="10"
                            FontSize="14"
                            BorderThickness="1"
                            BorderBrush="#CCCCCC"
                            Background="White"
                            Height="40"
                            Margin="0,5"/>
                
                <!-- Remember Me -->
                <CheckBox x:Name="RememberMeCheckBox" 
                         Content="Remember me" 
                         Margin="0,15,0,0" 
                         FontSize="12"/>
                
                <!-- Login Button -->
                <Button x:Name="LoginButton" 
                       Content="ðŸ” LOGIN TO NADRA SYSTEM" 
                       Style="{StaticResource LoginButton}"
                       Margin="0,30,0,0"
                       Click="LoginButton_Click"/>
                
                <!-- Status Message -->
                <TextBlock x:Name="StatusMessage" 
                          Text="" 
                          FontSize="12" 
                          HorizontalAlignment="Center" 
                          Margin="0,15,0,0"
                          TextWrapping="Wrap"/>
                
                <!-- Footer -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" 
                           Margin="0,20,0,0">
                    <TextBlock Text="Default Login: " FontSize="10" Foreground="#666"/>
                    <TextBlock Text="admin / admin123" FontSize="10" Foreground="#1B4332" FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>